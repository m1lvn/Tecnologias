# Variables de entorno para el backend
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/fichamedica
MONGODB_TEST_URI=mongodb://localhost:27017/fichamedica_test

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# CORS Configuration
FRONTEND_URL=http://localhost:8100
ALLOWED_ORIGINS=http://localhost:8100,http://localhost:4200,http://127.0.0.1:8100

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info